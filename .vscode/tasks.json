{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++-13 build active file",
            "command": "/usr/bin/g++-13",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-I/usr/local/ffmpeg/include", // ffmpeg头文件路径  
                "-L/usr/local/ffmpeg/lib", // ffmpeg库文件路径  
                "-lavcodec", "-lavformat", "-lavutil", "-lswscale","-lavfilter"// ffmpeg库 
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}